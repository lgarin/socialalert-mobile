<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.bravson.socialalert.android.CameraActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <SurfaceView
            android:id="@+id/cameraSurface"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <fragment android:id="@+id/mediaCategory"
            android:name="com.bravson.socialalert.android.MediaCategoryFragment_"
            android:layout_width="fill_parent"
    		android:layout_height="40dp"
            android:layout_alignParentBottom="true"
    		android:layout_alignParentLeft="true"
    		android:alpha="100"
    		android:background="#80000000"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >

        <ImageButton
            android:id="@+id/photoButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:background="@drawable/button_states"
            android:src="@drawable/instagram12" />

        <ImageButton
            android:id="@+id/recordButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/record8" />

        <ImageButton
            android:id="@+id/videoButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:background="@drawable/button_states"
            android:src="@drawable/video107" />

    </LinearLayout>

</LinearLayout>